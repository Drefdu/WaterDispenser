<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="css/dashboard.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/26fe3ca93f.js" crossorigin="anonymous"></script>
  <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

</head>
<body>
  <div class="container p-5 text-center vh-100">
    <div class="row">
      <div class="col mb-4">
        <div class="dashboard__card">
          <p class="time-text"><span>1,000</span><span class="time-sub-text">PM</span></p>
          <p class="day-text">Ganancias</p>
          <i class="fa-solid fa-dollar-sign moon"></i>
        </div>
      </div>
      <div class="col mb-4">
        <div class="dashboard__simple-card">
          <i class="fa-solid fa-video"></i>
          <div class="simple-card__info">
            <h4>54</h4>
            <h6>Camaras funcionando</h6>
          </div>
        </div>
        <div class="dashboard__simple-card">
          <i class="fa-solid fa-video"></i>
          <div class="simple-card__info">
            <h4>54</h4>
            <h6>Camaras funcionando</h6>
          </div>
        </div>
        <div class="dashboard__simple-card">
          <i class="fa-solid fa-video"></i>
          <div class="simple-card__info">
            <h4>54</h4>
            <h6>Camaras funcionando</h6>
          </div>
        </div>
        <div class="dashboard__simple-card">
          <i class="fa-solid fa-video"></i>
          <div class="simple-card__info">
            <h4>54</h4>
            <h6>Camaras funcionando</h6>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div id="myPlot" style="width:100%;max-width:700px"></div>
      </div>
    </div>
  </div>
  <script>
    const xArray = [55, 49, 44, 24, 15];
    const yArray = ["Enero","Febrero","Marzo","Abril","Mayo"];
    
    const data = [{
      x: xArray,
      y: yArray,
      type: "bar",
      orientation: "h",
      marker: {color:"linear-gradient(to right, rgb(22, 88, 212), rgb(73, 143, 223))"}
    }];
    
    const layout = {title:"Ganancias de los ultimos 5 meses"};
    
    Plotly.newPlot("myPlot", data, layout);
  </script>
</body>
</html>